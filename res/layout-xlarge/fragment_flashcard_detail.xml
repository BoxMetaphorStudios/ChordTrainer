<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:background="#ffffff"
    tools:context="com.intervaltrainer.FlashcardDetailFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/flashcard_title_label"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="#ffffff"
            android:text="@string/flashcard_title_label"
            android:textColor="#129793"
            android:textSize="55sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/flashcard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="65dp"
            android:src="@drawable/ip1_0" />

        <TextView
            android:id="@+id/flashcard_hear_label"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="#ffffff"
            android:text="@string/flashcard_hear_label"
            android:textColor="#000000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/play_broken_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.6"
                android:background="@drawable/button_home_quiz"
                android:padding="15dp"
                android:text="@string/fc_broken_button"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/play_block_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.6"
                android:background="@drawable/button_home_quiz"
                android:padding="15dp"
                android:text="@string/fc_block_button"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/flashcard_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:text="@string/flashcard_details_label"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/flashcard_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:text="info"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="30sp" />
    </LinearLayout>

</FrameLayout>